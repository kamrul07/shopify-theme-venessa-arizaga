<div id="main" class="about">
	<div class="page-top">
		<div class="pure-g">
			<div class="pure-u-1 pure-u-sm-1-3">
				<article class="sorting"></article>
			</div>
			<div class="pure-u-1 pure-u-sm-1-3">
				<article class="page-title">{{ article.title }}</article>
              <p class="article-details">posted <span class="article-time">{{ article.created_at | date: "%Y %h" }}</span> by <span class="article-author">{{ article.author }}</span></p>
			</div>
			<div class="pure-u-1 pure-u-sm-1-3">
				<article class="prevnext"></article>
			</div>
		</div>
	</div>
	<div class="content">
		<div class="pure-g">
			<div class="pure-u-1 pure-u-sm-1-4 pure-u-md-1-8 pure-u-lg-1-6 pure-u-xl-1-4"></div>
			<div class="pure-u-1 pure-u-sm-2-4 pure-u-md-3-4 pure-u-lg-2-3 pure-u-xl-1-2">
				<div class="box">
					{{ article.content }}
				</div>
              <div class="box">
					{% include 'like-article' with product %}
				</div>              
			</div>
		</div>
	</div>
</div>