{% paginate blog.articles by settings.blogposts_pagination_limit %}
<div id="main" class="press">
	<div class="page-top">
		<div class="pure-g">
			<div class="pure-u-1 pure-u-sm-1-3">
				<article class="sorting"></article>
			</div>
			<div class="pure-u-1 pure-u-sm-1-3">
				<article class="page-title">{{ blog.title }}</article>
			</div>
			<div class="pure-u-1 pure-u-sm-1-3">
				<article class="prevnext"></article>
			</div>
		</div>
	</div>
  <div class="loader"><div class="center-align">Loading articles...</div></div>
    
  <!-- Begin content -->
    <div class="content"> 
      <div class="inner">
  	{% for article in blog.articles %}
      <article>
        	<article class="information">
				<div class="title">{{ article.title }}</div>
				<div class="body">{{ article.excerpt_or_content }}</div>						
			</article>
        
        	<div class="placeholder">
              <div class="pure-g">
                  <div class="pure-u-1 pure-u-sm-1 pure-u-md-1-4 pure-u-lg-1-4 pure-u-xl-1-4">
                	<div class="left"></div>
                  </div>
                  <div class="pure-u-1 pure-u-sm-1 pure-u-md-3-4 pure-u-lg-3-4 pure-u-xl-3-4">
                      <div class="right">
                    	<div class="pure-g">
						
					    </div>
                      </div>
                  </div>
              </div>
        	</div>        
		</article>
      {% endfor %} 
      </div>
      </div>
  <!-- End content -->
  
</div>

{% include 'pagination' %}
{% endpaginate %}

<!-- blog init -->
{{ 'blog-init.js' | asset_url | script_tag }}
