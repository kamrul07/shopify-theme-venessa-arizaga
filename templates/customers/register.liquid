{% layout settings.customer_layout %}

<div id="main" class="press">
	<div class="page-top">
		<div class="pure-g">
			<div class="pure-u-1 pure-u-sm-1-3">
				<article class="sorting"></article>
			</div>
			<div class="pure-u-1 pure-u-sm-1-3">
				<article class="page-title">Create Account</article>
			</div>
			<div class="pure-u-1 pure-u-sm-1-3">
				<article class="prevnext"></article>
			</div>
		</div>
	</div>
    
  <!-- Begin content -->
    <div class="content center-align">
      <article>
			<div class="pure-g">
				<div class="pure-u-1 pure-u-sm-1-6 pure-u-lg-1-4 pure-u-xl-1-3"></div>
				<div class="pure-u-1 pure-u-sm-2-3 pure-u-lg-1-2 pure-u-xl-1-3">
					<article class="information">
						<div class="body">
                      		{% form 'create_customer' %}
	
	      {{ form.errors | default_errors }}

	      <div id="first_name" class="clearfix large_form">
	        <label for="first_name" class="label">First Name</label><br>
	        <input type="text" value="" name="customer[first_name]" id="first_name" class="text" size="30" />
	      </div>
			<br>
	      <div id="last_name" class="clearfix large_form">
	        <label for="last_name" class="label">Last Name</label><br>
	        <input type="text" value="" name="customer[last_name]" id="last_name" class="text" size="30" />
	      </div>
<br>
	      <div id="email" class="clearfix large_form">
	        <label for="email" class="label">Email Address</label><br>
	        <input type="email" value="" name="customer[email]" id="email" class="text" size="30" />
	      </div>
<br>
	      <div id="password" class="clearfix large_form">
	        <label for="password" class="label">Password</label><br>
	        <input type="password" value="" name="customer[password]" id="password" class="password text" size="30" />
	      </div>
<br>
	      <div class="action_bottom">
	        <input class="btn rounded" type="submit" value="Create" /><br>or<br>
	        <span class="note"><a href="{{ shop.url }}">Return to Store</a></span>
	      </div>
	
	    {% endform %}
                      </div>
						
					</article>
				</div>
              	<div class="pure-u-1 pure-u-sm-1-6 pure-u-lg-1-4 pure-u-xl-1-3"></div>
			</div>
		</article>
      </div>
  <!-- End content -->
  
</div>