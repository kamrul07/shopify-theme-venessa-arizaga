<script type="application/javascript">
    window.hextom_ctb = {
        p1: [
            {% if product.tags %}
                {% for tag in product.tags %}
                    "{{ tag | escape | split: "" | reverse | join: "" }}"
                    {% unless forloop.last %},{% endunless %}
                {% endfor %}
            {% endif %}
        ],
        p2: {
            {% if customer %}
                "v1": "{{ customer.orders_count | divided_by: 7 }},{{ customer.orders_count | modulo: 7 }}",
                "v2": [
                    {% if customer.tags %}
                        {% for tag in customer.tags %}
                            "{{ tag | escape | split: "" | reverse | join: "" }}"
                            {% unless forloop.last %},{% endunless %}
                        {% endfor %}
                    {% endif %}
                    ],
                "v3": "{{ customer.total_spent | divided_by: 7 }},{{ customer.total_spent | modulo: 7 }}",
            {% endif %}
        }
    };
</script>
<!-- **END** Hextom CTB Integration // Main - DO NOT MODIFY -->